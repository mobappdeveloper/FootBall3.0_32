<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Larger blue circle in back -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#454D62"/>
            <size
                android:width="24dp"
                android:height="24dp"/>
        </shape>
    </item>
    <!-- Smaller red circle in front -->
    <item android:drawable="@drawable/ic_information_symbol" android:left="4dp" android:top="4dp" android:bottom="4dp" android:right="4dp">
        <shape android:shape="oval">
            <!-- transparent stroke = larger_circle_size - smaller_circle_size -->
            <stroke android:color="@android:color/transparent"
                android:width="5dp"/>

            <size
                android:width="2dp"
                android:height="2dp"/>
        </shape>
    </item>
</layer-list>