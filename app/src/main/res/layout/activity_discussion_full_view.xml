<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_dashboard_bg">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/fb_discussion_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_h3"
                android:orientation="horizontal">


                <ImageView

                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_back_arrow" />


                <TextView
                    android:id="@+id/fb_workout_view_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diskussion"
                    android:layout_marginLeft="@dimen/layout_h4"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/fira_sans_bold"
                    android:textColor="@color/colorWhite"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btn_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/layout_h3"
                        android:src="@drawable/ic_trash_icon"/>
                    <ImageView
                        android:id="@+id/txt_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_profile_tool"/>
                </LinearLayout>




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/layout_h3">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
                <TextView
                    android:id="@+id/fb_discussion_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gib niemals auf"
                    android:layout_marginLeft="@dimen/layout_h4"
                    android:textSize="@dimen/text_body"
                    android:fontFamily="@font/fira_sans_bold"
                    android:textColor="@color/colorWhite"/>
                <TextView
                    android:id="@+id/txt_date_discussion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vor 21 Minuten"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:textColor="@color/colorGray"
                    android:fontFamily="@font/fira_sans"
                    android:textSize="@dimen/text_caption"/>
</LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/layout_h3">

                    <TextView
                        android:id="@+id/tags1"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="Motivation"
                        android:textColor="@color/colorWhite"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginRight="5dp"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:background="#454D62"
                        android:fontFamily="@font/fira_sans_medium"
                        android:textSize="12dp"/>
                    <TextView
                        android:id="@+id/tags2"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="Wettbewerb"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:background="#454D62"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/fira_sans"
                        android:textSize="12dp"/>

                    <TextView
                        android:id="@+id/tags3"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="Jaipur"
                        android:layout_marginRight="5dp"
                        android:textAlignment="center"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="#454D62"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/fira_sans"
                        android:textSize="12dp"/>




                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fb_discussion_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/layout_h4">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/vendor_ads_image"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_profile_img"/>

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="4dp"
                            android:layout_gravity="center"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/vendor_ads_product_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Aaron Adams"
                                android:textColor="@color/colorWhite"
                                android:fontFamily="@font/fira_sans"
                                android:textSize="@dimen/text_subbody"/>
                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Vor 21 Minuten"
                                android:layout_gravity="center"
                                android:gravity="end"
                                android:textColor="@color/colorGray"
                                android:fontFamily="@font/fira_sans"
                                android:textSize="@dimen/text_caption"/>
                        </LinearLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/text_disc_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/layout_h4"
                            android:text="Motivation ist unser Motor, um konkrete Ziele zu erreichen – egal, ob es darum geht, die Gesundheit zu fördern oder den Körper zu formen. Dafür muss sie aber erstmal da sein, die Motivation. Du willst endlich hoch vom Sofa, rein in die Sportschuhe und ab ins Fitnessstudio? Oft helfen einfache Strategien, deine Pläne in die Tat umzusetzen."
                            android:textColor="@color/colorGray"
                            android:fontFamily="@font/fira_sans"
                            android:textSize="@dimen/text_caption"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        android:layout_margin="@dimen/layout_h4">

                        <CheckBox
                            android:id="@+id/category_view_checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/layout_h4"
                            android:button="@drawable/ic_checkbox_favorite"
                            />
                        <TextView
                            android:id="@+id/txt_fav_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="125"
                            android:drawablePadding="@dimen/layout_h4"
                            android:textColor="@color/colorWhite"
                            android:layout_marginLeft="@dimen/layout_h4"
                            android:layout_marginRight="@dimen/layout_h3"
                            android:fontFamily="@font/fira_sans_bold"
                            android:textSize="@dimen/text_subbody"/>
                        <TextView
                            android:id="@+id/ic_comment_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="53"
                            android:drawableLeft="@drawable/ic_discussion"
                            android:drawablePadding="@dimen/layout_h4"
                            android:textColor="@color/colorWhite"
                            android:layout_marginLeft="@dimen/layout_h4"
                            android:fontFamily="@font/fira_sans"
                            android:textSize="@dimen/text_subbody"/>
                    </LinearLayout>



                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#808080"/>



                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fb_discussion_recycler"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:nestedScrollingEnabled="false"
                    android:layout_height="280dp"/>
                <TextView
                    android:id="@+id/nodatafound"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:text="No comment!!"
                    android:padding="16dp"
                    android:textColor="@color/colorWhite"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                android:layout_margin="16dp"
                android:gravity="bottom"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/chat_image"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                   android:adjustViewBounds="true"
          android:scaleType="fitXY"

android:layout_gravity="center"
                    android:src="@drawable/ic_profile_img"
                    />
                <LinearLayout
                    android:layout_width="240dp"
                    android:layout_height="100dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="16dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <EditText
                        android:id="@+id/edt_chat"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext_bg_grey"
                        android:layout_marginBottom="16dp"
                        android:hint="Kommentieren..."
                        android:paddingLeft="8dp"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:textColor="@color/colorWhite"
                        android:autofillHints="Kommentieren..."
                        android:textColorHint="@color/colorWhite"
                        android:inputType="text" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="#00FE7F"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:orientation="vertical">
                <ImageView
                    android:id="@+id/chat_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                   android:adjustViewBounds="true"
          android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_payment_play"
                    /></LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>