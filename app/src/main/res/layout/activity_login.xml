<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_splash_bg">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/fb_login_logo"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_logo"/>

            <TextView
                android:id="@+id/fb_login_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOGIN"
                android:textSize="30dp"
                android:layout_margin="@dimen/layout_h4"
                android:textColor="@color/colorWhite"
                android:textAlignment="center"
                app:fontFamily="@font/fira_sans" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/layout_h3">

                <EditText
                    android:id="@+id/fb_login_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorDarkGray"
                    android:textSize="12sp"
                    android:inputType="textEmailAddress"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:padding="@dimen/layout_h3"
                    android:drawableLeft="@drawable/ic_email_icon"
                    android:drawablePadding="@dimen/layout_h3"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorDarkGray"
                    android:fontFamily="@font/fira_sans_bold"
                    android:hint="E-Mail Adresse"/>




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/layout_h3">

                <EditText
                    android:id="@+id/fb_login_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorDarkGray"
                    android:textSize="12sp"
                    android:inputType="textPassword"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:padding="@dimen/layout_h3"
                    android:drawableLeft="@drawable/ic_password_icon"
                    android:drawablePadding="@dimen/layout_h3"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorDarkGray"
                    android:fontFamily="@font/fira_sans_bold"
                    android:hint="Passwort"/>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/layout_h3"
                android:layout_marginLeft="@dimen/layout_h3"
                android:layout_marginRight="@dimen/layout_h3">

                <TextView
                    android:id="@+id/fb_forget_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Passwort Ã¤ndern"
                    android:textSize="11sp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/fira_sans_bold"/>
                <TextView
                    android:id="@+id/fb_login_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textSize="11sp"
                    android:text="Registrieren"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/fira_sans_bold"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_h1">

                <Button
                    android:id="@+id/btn_fb_login"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Login"
                    android:textSize="12sp"
                    android:fontFamily="@font/fira_sans_bold"
                    android:background="@drawable/ic_edittext_bg"
                    android:textColor="@color/colorMajor"
                    android:textAllCaps="false"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="@dimen/layout_h3">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/layout_h4"
                    android:layout_marginRight="@dimen/layout_h4"
                    android:gravity="center">

                    <View
                        android:layout_width="30dp"
                        android:layout_height="2dp"
                        android:background="@color/colorWhite"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/layout_h4"
                    android:layout_marginRight="@dimen/layout_h4"
                    android:gravity="center"
                    >


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:text="Oder weiter mit"
                        android:textAlignment="center"
                        android:fontFamily="@font/fira_sans_bold"
                        android:textSize="@dimen/text_caption"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/layout_h4"
                    android:layout_marginRight="@dimen/layout_h4"
                    android:gravity="center">

                    <View
                        android:layout_width="30dp"
                        android:layout_height="2dp"
                        android:background="@color/colorWhite"/>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:layout_margin="@dimen/layout_h3"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/fb_facebook_integerate"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/layout_h4"
                    android:layout_marginRight="@dimen/layout_h4"
                    android:src="@drawable/ic_facebook_icon"/>

                <ImageView
                    android:id="@+id/fb_twitter_integerate"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/layout_h4"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/layout_h4"
                    android:src="@drawable/ic_twitter_icon"/>
                <com.facebook.login.widget.LoginButton
                    android:id="@+id/loginbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_h4"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/layout_h4" />
                <com.google.android.gms.common.SignInButton
                    android:id="@+id/sign_in_button"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_h4"
                    android:layout_marginRight="@dimen/layout_h4"  />
                <ImageView
                    android:id="@+id/fb_google_integerate"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/layout_h4"
                    android:layout_marginRight="@dimen/layout_h4"
                    android:src="@drawable/ic_google_icon"/>



            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
    </LinearLayout>


    </ScrollView>
        </LinearLayout>