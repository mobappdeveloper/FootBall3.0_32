<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/txt_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fira_sans_bold"
        android:textSize="17dp"
        android:text="19. - 25. Mai 2019"
        android:layout_margin="@dimen/layout_h4"
        android:textColor="@color/colorWhite"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="8dp"
        android:elevation="10dp"
        android:background="@drawable/textview_dash_bg"
        app:cardCornerRadius="25dp">

        <ImageView
            android:id="@+id/store_product_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:adjustViewBounds="true"
          android:scaleType="fitXY"
            android:background="@drawable/textview_dash_bg"
            android:src="@drawable/ic_home_card"
          />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center|bottom"
            android:alpha="0.5"
            android:visibility="visible"
            android:background="@drawable/textview_dash_bg"

            />
   <!-- android:background="#189863"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

                <TextView
                    android:id="@+id/store_places"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Neue Woche, neue Energie.
Beginne dein Training."
                    android:textSize="14dp"
                    android:fontFamily="@font/fira_sans_medium"
                    android:textColor="@color/colorBlack" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


        <Button
        android:id="@+id/kl_btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
            android:visibility="visible"
            android:textAllCaps="false"
            android:textSize="@dimen/text_subbody"
        android:textColor="@color/colorBlack"
        android:text="Alle Workouts anzeigen"
        android:background="@drawable/ic_home_button"
        android:fontFamily="@font/fira_sans"

            />
</LinearLayout>
    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_date1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fira_sans_bold"
            android:textSize="17dp"
            android:text="19. - 25. Mai 2019"
            android:layout_margin="@dimen/layout_h4"
            android:textColor="@color/colorWhite"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item_dash_recycleview"
            />
        <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
            android:visibility="gone"
        android:layout_margin="@dimen/layout_h4"
        app:cardCornerRadius="15dp">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fb_workout_view_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_grid"
                android:scaleType="centerCrop"/>




        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center|bottom"
            android:visibility="gone"
            android:background="@drawable/ic_grid_end_color">


        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_h3"
        android:visibility="gone"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/fb_workout_view_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hot Winger"
            android:layout_marginLeft="@dimen/layout_h4"
            android:textSize="@dimen/text_subbody"
            android:layout_gravity="center"
            android:fontFamily="@font/fira_sans_bold"
            android:textColor="@color/colorWhite"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/fitness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:alpha="0.6"
                android:layout_marginLeft="@dimen/layout_h4"
                android:textSize="@dimen/text_subbody"
                android:layout_gravity="center"
                android:backgroundTint="#00C476"
                android:textAlignment="center"
                android:background="@drawable/ic_view_count_bg"
                android:fontFamily="@font/fira_sans_bold"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:id="@+id/technique"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:alpha="0.6"
                android:layout_marginLeft="@dimen/layout_h4"
                android:textAlignment="center"
                android:backgroundTint="#FFEA00"
                android:textSize="@dimen/text_subbody"
                android:layout_gravity="center"
                android:background="@drawable/ic_view_count_bg"
                android:fontFamily="@font/fira_sans_bold"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:id="@+id/body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:alpha="0.6"
                android:textAlignment="center"
                android:backgroundTint="#FF0006"
                android:layout_marginLeft="@dimen/layout_h4"
                android:textSize="@dimen/text_subbody"
                android:layout_gravity="center"
                android:background="@drawable/ic_view_count_bg"
                android:fontFamily="@font/fira_sans_bold"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:id="@+id/mental"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:alpha="0.6"
                android:layout_marginLeft="@dimen/layout_h4"
                android:textSize="@dimen/text_subbody"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:backgroundTint="#0086FF"
                android:background="@drawable/ic_view_count_bg"
                android:fontFamily="@font/fira_sans_bold"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:id="@+id/health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:alpha="0.6"
                android:textAlignment="center"
                android:background="@drawable/ic_view_count_bg"
                android:layout_marginLeft="@dimen/layout_h4"
                android:textSize="@dimen/text_subbody"
                android:layout_gravity="center"
                android:backgroundTint="#FF7E01"
                android:fontFamily="@font/fira_sans_bold"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:id="@+id/behaviour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:alpha="0.6"
                android:textAlignment="center"
                android:background="@drawable/ic_view_count_bg"
                android:layout_marginLeft="@dimen/layout_h4"
                android:textSize="@dimen/text_subbody"
                android:layout_gravity="center"
                android:fontFamily="@font/fira_sans_bold"
                android:textColor="@color/colorWhite"/>


        </LinearLayout>




    </LinearLayout>
    </LinearLayout>
</LinearLayout>