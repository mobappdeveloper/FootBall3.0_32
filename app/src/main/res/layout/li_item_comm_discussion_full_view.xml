<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/layout_h4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/colorTransparent"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                    <ImageView
                        android:id="@+id/vendor_ads_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_profile_img"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:padding="4dp">

                <TextView
                    android:id="@+id/vendor_ads_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aaron Adams"
                    android:layout_weight="0.5"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/fira_sans_bold"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/txt_date_disc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vor 21 Minuten"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:alpha="0.2"
                    android:textColor="@color/colorGray"
                    android:fontFamily="@font/fira_sans"
                    android:textSize="@dimen/text_caption"/>
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_disc_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_h4"
                android:text="Motivation ist unser Motor, um konkrete Ziele zu erreichen – egal, ob es darum geht, die Gesundheit zu fördern oder den Körper zu formen. Dafür muss sie aber erstmal da sein, die Motivation. Du willst endlich hoch vom Sofa, rein in die Sportschuhe und ab ins Fitnessstudio? Oft helfen einfache Strategien, deine Pläne in die Tat umzusetzen."
                android:textColor="@color/colorGray"
                android:fontFamily="@font/fira_sans"
                android:alpha="0.7"
                android:textSize="10sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_margin="@dimen/layout_h4">

            <CheckBox
                android:id="@+id/category_view_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_h4"
                android:button="@drawable/ic_checkbox_favorite"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="125"
                android:drawablePadding="@dimen/layout_h4"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="@dimen/layout_h4"
                android:layout_marginRight="@dimen/layout_h3"
                android:fontFamily="@font/fira_sans_bold"
                android:textSize="@dimen/text_subbody"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="53"
                android:drawableLeft="@drawable/ic_discussion"
                android:drawablePadding="@dimen/layout_h4"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="@dimen/layout_h4"
                android:fontFamily="@font/fira_sans"
                android:textSize="@dimen/text_subbody"/>
        </LinearLayout>



        </LinearLayout>



    </LinearLayout>


