<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_dashboard_bg">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_h3"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/fb_discussion_upload_back"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_back_arrow" />


                <TextView
                    android:id="@+id/fb_workout_view_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diskussion hochladen"
                    android:layout_marginLeft="@dimen/layout_h4"
                    android:textSize="@dimen/text_body"
                    android:layout_gravity="center"
                    android:fontFamily="@font/fira_sans_bold"
                    android:textColor="@color/colorWhite"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/layout_h3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/layout_h3">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/text_email_head"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorDarkGray"
                        app:counterEnabled="true"
                        app:counterMaxLength="20"


                        >
                        <EditText
                            android:id="@+id/edt_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Gebe Sie den Titel ein"
                            android:backgroundTint="@color/colorDarkGray"
                            android:textColor="@color/colorWhite"
                            android:textColorHint="@color/colorDarkGray"
                            android:fontFamily="@font/fira_sans_bold"
                            android:inputType="textEmailAddress"
                            android:padding="@dimen/layout_h3"
                            android:textSize="@dimen/text_body"
                            />
                    </com.google.android.material.textfield.TextInputLayout>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorDarkGray"
                        android:textSize="@dimen/text_body"
                        android:inputType="textEmailAddress"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:visibility="gone"
                        android:padding="@dimen/layout_h3"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorDarkGray"
                        android:fontFamily="@font/fira_sans_bold"
                        android:hint="Titel hinzuf端gen.."/>




                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/layout_h3">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorDarkGray"
                        android:textSize="14sp"
                        android:inputType="textEmailAddress"
                        android:maxLength="30"
                        android:maxLines="1"
                        android:layout_weight="1"
                        android:padding="12sp"
                        android:layout_margin="4dp"
                        android:background="@drawable/edittext_bg_grey"
                        android:id="@+id/edt_tags1"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorDarkGray"
                        android:fontFamily="@font/fira_sans_bold"
                        android:hint="Kategorie hinzuf端gen.."/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorDarkGray"
                        android:textSize="14sp"
                        android:inputType="textEmailAddress"
                        android:maxLength="30"
                        android:maxLines="1"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:padding="12sp"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/edittext_bg_grey"
                        android:id="@+id/edt_tags2"
                        android:textColorHint="@color/colorDarkGray"
                        android:fontFamily="@font/fira_sans_bold"
                        android:hint="Kategorie hinzuf端gen.."/>

                    <EditText
                        android:id="@+id/edt_tags3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorDarkGray"
                        android:textSize="14sp"
                        android:inputType="textEmailAddress"
                        android:maxLength="30"
                        android:maxLines="1"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_bg_grey"
                        android:padding="12sp"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorDarkGray"
                        android:fontFamily="@font/fira_sans_bold"
                        android:hint="Kategorie hinzuf端gen.."/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/layout_h3">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorDarkGray"
                        android:textSize="@dimen/text_body"
                        android:inputType="textEmailAddress"
                        android:maxLength="30"
                        android:maxLines="1"
                        android:padding="@dimen/layout_h3"
android:visibility="gone"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorDarkGray"
                        android:fontFamily="@font/fira_sans_bold"
                        android:hint="Text verfassen.."/>



                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/text_desc_head"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorDarkGray"
                        app:counterEnabled="true"
                        app:counterMaxLength="500"


                        >
                        <EditText
                            android:id="@+id/edt_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Text verfassen.."
                            android:backgroundTint="@color/colorDarkGray"
                            android:textColor="@color/colorWhite"
                            android:textColorHint="@color/colorDarkGray"
                            android:fontFamily="@font/fira_sans_bold"
                            android:inputType="textEmailAddress"
                            android:padding="@dimen/layout_h3"
                            android:textSize="@dimen/text_body"
                            />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="@dimen/layout_h3"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_fb_discussion_hold"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Diskussion hochladen"
                    android:fontFamily="@font/fira_sans_bold"
                    android:textSize="@dimen/text_subbody"
                    android:background="@drawable/ic_button_bg"
                    android:textColor="@color/colorBlack"
                    android:textAllCaps="false"/>

            </LinearLayout>

        </LinearLayout>

            </LinearLayout>