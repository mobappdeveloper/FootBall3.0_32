        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/layout_h3"
            android:layout_marginTop="-70dp">
        <EditText
            android:id="@+id/fb_home_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Suche nach Programmen.."
            android:fontFamily="@font/fira_sans"
            android:textColor="@color/colorWhite"
            android:maxLength="10"
            android:drawableLeft="@drawable/ic_search_icon"
            android:drawablePadding="@dimen/layout_h4"
android:visibility="invisible"
            android:textColorHint="#454D62"
            android:background="@drawable/ic_search_bg"
            android:textSize="@dimen/text_caption"/>
    </LinearLayout>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="40dp"
       android:layout_marginLeft="@dimen/layout_h3"
       android:layout_marginRight="@dimen/layout_h3">

       <LinearLayout
           android:id="@+id/fb_home_main_program"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:background="@drawable/ic_dashbaord_button_bg"
           android:layout_weight="1">



           <ImageView
               android:id="@+id/fb_img_main_program"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginRight="@dimen/layout_h4"
               android:src="@drawable/ic_mein_program"/>

           <TextView
               android:id="@+id/fb_tv_main_program"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Mein Programm"
               android:fontFamily="@font/fira_sans"
               android:textSize="@dimen/text_caption"
               android:textColor="@color/colorWhite"/>
       </LinearLayout>





       <LinearLayout
           android:id="@+id/fb_home_sub_program"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/ic_dashbaord_button_bg"
           android:gravity="center"
           android:layout_weight="1">



           <ImageView
               android:id="@+id/fb_img_sub_program"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginRight="@dimen/layout_h4"
               android:src="@drawable/ic_sub_program"/>

           <TextView
               android:id="@+id/fb_tv_sub_program"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Übersicht"
               android:fontFamily="@font/fira_sans"
               android:textSize="@dimen/text_caption"
               android:textColor="@color/colorWhite"/>
       </LinearLayout>




   </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_h3">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fb_home_main_program_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



        </LinearLayout>
         <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"

       android:scrollbars="none">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/fb_home_sub_program_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabMode="scrollable"
                app:tabGravity="fill"
                app:tabIndicator="@color/colorMajor"/>
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/fb_home_sub_program_view_pager"
                android:layout_width="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_height="500dp"
               />


        </LinearLayout>

