<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popup_window"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center"
    android:background="@android:color/white"
    android:orientation="vertical">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="250dp"
       android:background="@drawable/ic_pause_bg"
       android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:orientation="vertical"
        android:layout_margin="@dimen/layout_h3">

        <Switch
            android:id="@+id/switch_music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_h3"
            android:text="Musik"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/fira_sans_bold"
        android:track="@drawable/ic_switch_bg"/>
        <Switch
            android:id="@+id/switch_sound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_h3"
            android:text="Sound"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/fira_sans_bold"
            android:track="@drawable/ic_switch_bg"/>


    </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="@dimen/layout_h3"
           android:orientation="horizontal">

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:orientation="vertical">

               <TextView
                   android:id="@+id/cancel_workout"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Workout beenden"
                   android:textAlignment="center"
                   android:textColor="#FF5A5A"
                   android:fontFamily="@font/fira_sans_medium"/>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="2dp"
                   android:layout_marginLeft="40dp"
                   android:layout_marginRight="40dp"
                   android:background="#FF5A5A"/>



           </LinearLayout>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:orientation="vertical">

               <TextView
                   android:id="@+id/continue_workout"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Workout fortsetzen"
                   android:textColor="@color/colorMajor"
                   android:textAlignment="center"
                   android:fontFamily="@font/fira_sans_medium"/>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="2dp"
                   android:layout_marginLeft="40dp"
                   android:layout_marginRight="40dp"
                   android:background="@color/colorMajor"/>



           </LinearLayout>



       </LinearLayout>
   </LinearLayout>





</LinearLayout>