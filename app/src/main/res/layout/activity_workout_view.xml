<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/ic_dashboard_bg">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/fb_workout_view_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_h3"
                android:orientation="horizontal">


                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_back_arrow" />


                <TextView
                    android:id="@+id/fb_workout_view_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hot Winger"
                    android:layout_marginLeft="20dp"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/fira_sans_bold"
                    android:textColor="@color/colorWhite"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginRight="@dimen/layout_h3"
                        android:src="@drawable/ic_profile_settings"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_profile_tool"/>
                </LinearLayout>




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/layout_h4">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="@dimen/layout_h4"
                    android:backgroundTint="@color/colorTransparent"
                    app:cardCornerRadius="15dp">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/fb_workout_view_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                       android:adjustViewBounds="true"
          android:scaleType="fitXY"/>




                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:visibility="gone"
                    android:layout_gravity="center|bottom"
                    android:background="@drawable/ic_grid_end_color">


                </LinearLayout>
                </androidx.cardview.widget.CardView>
                <View
                    android:layout_width="30dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center"
                    android:background="@color/colorWhite"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_h3"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/fb_workout_view_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="@dimen/layout_h4"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:maxLength="16"
                    android:singleLine="true"
                    android:fontFamily="@font/fira_sans_bold"
                    android:textColor="@color/colorWhite"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/fitness"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:alpha="0.6"
                        android:layout_marginLeft="@dimen/layout_h4"
                        android:textSize="@dimen/text_subbody"
                        android:layout_gravity="center"
                        android:backgroundTint="#00C476"
                        android:textAlignment="center"
                        android:background="@drawable/ic_view_count_bg"
                        android:fontFamily="@font/fira_sans_bold"
                        android:textColor="@color/colorWhite"/>
                    <TextView
                        android:id="@+id/technique"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:alpha="0.6"
                        android:layout_marginLeft="@dimen/layout_h4"
                        android:textAlignment="center"
                        android:backgroundTint="#FFEA00"
                        android:textSize="@dimen/text_subbody"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_view_count_bg"
                        android:fontFamily="@font/fira_sans_bold"
                        android:textColor="@color/colorWhite"/>
                    <TextView
                        android:id="@+id/body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:alpha="0.6"
                        android:textAlignment="center"
                        android:backgroundTint="#FF0006"
                        android:layout_marginLeft="@dimen/layout_h4"
                        android:textSize="@dimen/text_subbody"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_view_count_bg"
                        android:fontFamily="@font/fira_sans_bold"
                        android:textColor="@color/colorWhite"/>
                    <TextView
                        android:id="@+id/mental"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:alpha="0.6"
                        android:layout_marginLeft="@dimen/layout_h4"
                        android:textSize="@dimen/text_subbody"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:backgroundTint="#0086FF"
                        android:background="@drawable/ic_view_count_bg"
                        android:fontFamily="@font/fira_sans_bold"
                        android:textColor="@color/colorWhite"/>
                    <TextView
                        android:id="@+id/health"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:alpha="0.6"
                        android:textAlignment="center"
                        android:background="@drawable/ic_view_count_bg"
                        android:layout_marginLeft="@dimen/layout_h4"
                        android:textSize="@dimen/text_subbody"
                        android:layout_gravity="center"
                        android:backgroundTint="#FF7E01"
                        android:fontFamily="@font/fira_sans_bold"
                        android:textColor="@color/colorWhite"/>
                    <TextView
                        android:id="@+id/behaviour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:alpha="0.6"
                        android:textAlignment="center"
                        android:background="@drawable/ic_view_count_bg"
                        android:layout_marginLeft="@dimen/layout_h4"
                        android:textSize="@dimen/text_subbody"
                        android:layout_gravity="center"
                        android:fontFamily="@font/fira_sans_bold"
                        android:textColor="@color/colorWhite"/>


                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/layout_h4">

                <TextView
                    android:id="@+id/fb_workout_view_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="@dimen/layout_h4"
                    android:textSize="10dp"
                    android:alpha="0.7"
                    android:fontFamily="@font/fira_sans"
                    android:textColor="@color/colorWhite"
                    />




            </LinearLayout>
            <com.footballio.Utils.NonScrollExpandableListView
                android:id="@+id/exp_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:groupIndicator="@null"
                android:overScrollMode="never"
                android:dividerHeight="1dp"
                android:layout_margin="@dimen/layout_h3"
                android:nestedScrollingEnabled="true"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
               >

               <!-- <TextView
                    android:id="@+id/fb_workout_view_warm_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Base Warm Up"
                    android:drawablePadding="@dimen/layout_h4"
                    android:drawableRight="@drawable/ic_down_arrow"
                    android:layout_margin="@dimen/layout_h4"
                    android:fontFamily="@font/fira_sans_bold"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_subbody"/>-->

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fb_workout_view_warm_up_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:nestedScrollingEnabled="false"
                    android:orientation="vertical"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:layout_margin="@dimen/layout_h3"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_fb_workout_view"
                    android:layout_width="250dp"
                    android:layout_height="50dp"

                    android:text="Workout starten"
                    android:textSize="12sp"
                    android:fontFamily="@font/fira_sans_bold"
                    android:background="@drawable/ic_button_bg"
                    android:textColor="@color/colorBlack"
                    android:textAllCaps="false"/>

            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
                android:visibility="gone"
            android:layout_height="60dp"/>
            </LinearLayout>



</androidx.core.widget.NestedScrollView>