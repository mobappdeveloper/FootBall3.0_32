<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_dashboard_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/fb_settings_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_h3"
                android:orientation="horizontal">


                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_back_arrow" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Einstellungen"
                    android:layout_marginLeft="24dp"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/fira_sans_bold"
                    android:textColor="@color/colorWhite"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginRight="@dimen/layout_h3"
                        android:src="@drawable/ic_profile_settings"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:src="@drawable/ic_profile_tool"/>
                </LinearLayout>




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/layout_h3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Konto"
                    android:textSize="@dimen/text_body"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/fira_sans_bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/layout_h4">
                    <TextView
                        android:id="@+id/fb_settings_profile_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Profil bearbeiten"
                        android:drawableLeft="@drawable/ic_compose"
                        android:drawablePadding="@dimen/layout_h4"
                        android:drawableRight="@drawable/ic_right_arrow"
                        android:background="@drawable/ic_settings_et_bg"
                        android:layout_margin="@dimen/layout_h4"
                        android:fontFamily="@font/fira_sans_bold"
                        android:textColor="#8992AA"
                        android:textSize="@dimen/text_subbody"/>
                    <TextView
                        android:id="@+id/fb_settings_change_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Passwort Ã¤ndern"
                        android:drawableLeft="@drawable/ic_lock"
                        android:drawablePadding="@dimen/layout_h4"
                        android:drawableRight="@drawable/ic_right_arrow"
                        android:background="@drawable/ic_settings_et_bg"
                        android:layout_margin="@dimen/layout_h4"
                        android:fontFamily="@font/fira_sans_bold"
                        android:textColor="#8992AA"
                        android:textSize="@dimen/text_subbody"/>



                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Benachrichtigungen"
                    android:textSize="@dimen/text_body"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/fira_sans_bold"/>
                <Switch
                    android:id="@+id/switch_notification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/layout_h3"
                    android:text="Benachrichtigungen einschalten"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/fira_sans_bold"
                    android:track="@drawable/ic_switch_bg"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Weitere Einstellungen"
                    android:textSize="@dimen/text_body"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/fira_sans_bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/layout_h4">
                    <TextView
                        android:id="@+id/fb_settings_language"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sprache"
                        android:drawableLeft="@drawable/ic_icon_chat"
                        android:drawablePadding="@dimen/layout_h4"
                        android:drawableRight="@drawable/ic_right_arrow"
                        android:background="@drawable/ic_settings_et_bg"
                        android:layout_margin="@dimen/layout_h4"
                        android:fontFamily="@font/fira_sans_bold"
                        android:textColor="#8992AA"
                        android:textSize="@dimen/text_subbody"/>
                    <TextView
                        android:id="@+id/fb_settings_feedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Feedback"
                        android:drawableLeft="@drawable/ic_space"
                        android:drawablePadding="@dimen/layout_h4"
                        android:drawableRight="@drawable/ic_right_arrow"
                        android:background="@drawable/ic_settings_et_bg"
                        android:layout_margin="@dimen/layout_h4"
                        android:fontFamily="@font/fira_sans_bold"
                        android:textColor="#8992AA"
                        android:textSize="@dimen/text_subbody"/>
                    <TextView
                        android:id="@+id/fb_settings_premium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bezahlmethoden"
                        android:drawableLeft="@drawable/ic_card_icon"
                        android:drawablePadding="@dimen/layout_h4"
                        android:drawableRight="@drawable/ic_right_arrow"
                        android:background="@drawable/ic_settings_et_bg"
                        android:layout_margin="@dimen/layout_h4"
                        android:fontFamily="@font/fira_sans_bold"
                        android:textColor="#8992AA"
                        android:textSize="@dimen/text_subbody"/>

                    <TextView
                        android:id="@+id/fb_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Abonnement"
                        android:drawableLeft="@drawable/ic_card_icon"
                        android:drawablePadding="@dimen/layout_h4"
                        android:drawableRight="@drawable/ic_right_arrow"
                        android:background="@drawable/ic_settings_et_bg"
                        android:layout_margin="@dimen/layout_h4"
                        android:fontFamily="@font/fira_sans_bold"
                        android:textColor="#8992AA"
                        android:textSize="@dimen/text_subbody"/>
                    <TextView
                        android:id="@+id/fb_logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Abmelden"
                        android:drawableLeft="@drawable/ic_card_icon"
                        android:drawablePadding="@dimen/layout_h4"
                        android:drawableRight="@drawable/ic_right_arrow"
                        android:background="@drawable/ic_settings_et_bg"
                        android:layout_margin="@dimen/layout_h4"
                        android:fontFamily="@font/fira_sans_bold"
                        android:textColor="#8992AA"
                        android:textSize="@dimen/text_subbody"/>
                    <TextView
                        android:id="@+id/fb_tandc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="AGB  &amp; Datenschutz    "
                        android:drawableLeft="@drawable/ic_card_icon"
                        android:drawablePadding="@dimen/layout_h4"
                        android:drawableRight="@drawable/ic_right_arrow"
                        android:background="@drawable/ic_settings_et_bg"
                        android:layout_margin="@dimen/layout_h4"
                        android:fontFamily="@font/fira_sans_bold"
                        android:textColor="#8992AA"
                        android:textSize="@dimen/text_subbody"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>