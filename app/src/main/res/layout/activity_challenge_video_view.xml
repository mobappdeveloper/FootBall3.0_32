<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_dashboard_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_h3"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/fb_challenge_video_back"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_back_arrow" />


                <TextView
                    android:id="@+id/fb_workout_view_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Challenge"
                    android:layout_marginLeft="@dimen/layout_h4"
                    android:textSize="@dimen/text_body"
                    android:layout_gravity="center"
                    android:fontFamily="@font/fira_sans_bold"
                    android:textColor="@color/colorWhite"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/layout_h3"
                        android:src="@drawable/ic_delete_black_24dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_profile_tool"/>
                </LinearLayout>




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/layout_h3">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:backgroundTint="@color/colorTransparent"
                    android:layout_margin="@dimen/layout_h4"
                    app:cardCornerRadius="15dp">




                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:orientation="vertical">

                        <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                            android:id="@+id/fb_blog_image"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                          android:visibility="visible"
                            app:resize_mode="fit"
                            />
                        <LinearLayout
                            android:id="@+id/progress_bar_layout"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:gravity="center">
                            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                xmlns:wheel="http://schemas.android.com/apk/res-auto"
                                android:orientation="vertical"
                                android:layout_width="70dp"
                                android:gravity="center"
                                android:layout_height="70dp">
                                <com.pnikosis.materialishprogress.ProgressWheel
                                    android:id="@+id/progressBargreen"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_centerInParent="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    wheel:matProg_fillRadius="true"
                                    wheel:matProg_barColor="@color/colorMajor"
                                    wheel:matProg_progressIndeterminate="true" />
                                <com.pnikosis.materialishprogress.ProgressWheel
                                    android:id="@+id/progressBarBlue"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_centerInParent="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:visibility="visible"
                                    wheel:matProg_fillRadius="true"
                                    wheel:matProg_barColor="@color/colorMajorblue"
                                    wheel:matProg_progressIndeterminate="true" />
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="120dp"
                            android:visibility="gone"
                            android:backgroundTint="@color/colorTransparent"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                               android:adjustViewBounds="true"
          android:scaleType="fitXY"
                                android:src="@drawable/ic_play" />
                        </LinearLayout>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/layout_h3">

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/colorTransparent"
                    android:layout_gravity="center"
                    app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                    <ImageView
                        android:id="@+id/vendor_ads_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_profile_img"/>

                </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/fb_challenege_video_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kevin McDonald"
                    android:layout_marginLeft="@dimen/layout_h3"
                    android:textSize="@dimen/text_body"
                    android:layout_gravity="center"
                    android:fontFamily="@font/fira_sans_bold"
                    android:textColor="@color/colorWhite"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="end">
                    <TextView
                        android:id="@+id/txt_like_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="125"
                        android:drawablePadding="@dimen/layout_h4"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/fira_sans_bold"
                        android:layout_marginRight="@dimen/layout_h4"
                        android:textSize="@dimen/text_body"/>
                    <CheckBox
                        android:id="@+id/category_view_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/layout_h3"
                        android:button="@drawable/ic_checkbox_favorite"
                        />
                </LinearLayout>



            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>