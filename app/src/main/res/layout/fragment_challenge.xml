<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_dashboard_bg">


 <androidx.core.widget.NestedScrollView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/layout_h3">


                    <TextView
                        android:id="@+id/fb_challenge_tv_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hallo, "
                        android:textSize="20dp"
                        android:textColor="@color/colorWhite"
                        android:textAlignment="center"
                        app:fontFamily="@font/fira_sans_light" />
                    <TextView
                        android:id="@+id/fb_challenge_tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JÃ¼rgen"
                        android:textSize="20dp"
                        android:textColor="@color/colorWhite"
                        android:textAlignment="center"
                        app:fontFamily="@font/fira_sans_bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/payment_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/layout_h3"
                    android:layout_weight="1"
                    android:gravity="end">


                  <!--  <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_community_img"/>-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                            android:id="@+id/progressgreen"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerInParent="true"
                            android:indeterminate="false"
                            app:cpb_background_progressbar_color="@color/colorMajor_light"
                            app:cpb_background_progressbar_width="10dp"
                            app:cpb_progress_direction="to_right"
                            app:cpb_progressbar_color="@color/colorMajor"
                            app:cpb_round_border="true"
                            app:cpb_progressbar_width="10dp"/>
                        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                            android:id="@+id/progressblue"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:indeterminate="true"
                            app:cpb_background_progressbar_color="@color/colorMajorblue_light"
                            app:cpb_background_progressbar_width="10dp"
                            app:cpb_progress_direction="to_right"
                            app:cpb_progressbar_color="@color/colorMajorblue"
                            app:cpb_round_border="true"
                            app:cpb_progressbar_width="10dp" />
                    </RelativeLayout>
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
android:visibility="invisible"
                android:layout_marginLeft="@dimen/layout_h3"
                android:layout_marginTop="-70dp">
                <EditText
                    android:id="@+id/fb_challenge_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Suche nach Programmen.."
                    android:fontFamily="@font/fira_sans"
                    android:textColor="@color/colorWhite"
                    android:maxLength="10"
                    android:drawableLeft="@drawable/ic_search_icon"
                    android:drawablePadding="@dimen/layout_h4"
                    android:textColorHint="#454D62"
                    android:background="@drawable/ic_search_bg"
                    android:textSize="@dimen/text_caption"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="50dp"
                android:visibility="visible"
                android:layout_marginLeft="@dimen/layout_h3"
                android:layout_marginRight="@dimen/layout_h3">

                <LinearLayout
                    android:id="@+id/fb_challenge_chlng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/ic_dashbaord_button_bg"
                    android:layout_weight="1">



                    <ImageView
                        android:id="@+id/fb_img_challenge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/layout_h4"
                        android:src="@drawable/ic_target"/>

                    <TextView
                        android:id="@+id/fb_tv_challenge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Challenge"
                        android:fontFamily="@font/fira_sans"
                        android:textSize="@dimen/text_caption"
                        android:textColor="@color/colorWhite"/>
                </LinearLayout>





                <LinearLayout
                    android:id="@+id/fb_challenge_ranking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_dashbaord_button_bg"
                    android:gravity="center"
                    android:layout_weight="1">



                    <ImageView
                        android:id="@+id/fb_img_ranking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/layout_h4"
                        android:src="@drawable/ic_growth"/>

                    <TextView
                        android:id="@+id/fb_tv_ranking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rangliste"
                        android:fontFamily="@font/fira_sans"
                        android:textSize="@dimen/text_caption"
                        android:textColor="@color/colorWhite"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fb_challenge_trophies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_dashbaord_button_bg"
                    android:gravity="center"
                    android:layout_weight="1">



                    <ImageView
                        android:id="@+id/fb_img_trophies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/layout_h4"
                        android:src="@drawable/ic_award"/>

                    <TextView
                        android:id="@+id/fb_tv_trophies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pokale"
                        android:fontFamily="@font/fira_sans"
                        android:textSize="@dimen/text_caption"
                        android:textColor="@color/colorWhite"/>
                </LinearLayout>




            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_margin="@dimen/layout_h3">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fb_challenge_ranking_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:visibility="gone"

                    />
                <TextView
                    android:id="@+id/fb_challenge_trophy_chlng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Challenge"
                    android:visibility="gone"
                    android:layout_margin="@dimen/layout_h4"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_body"
                    android:fontFamily="@font/fira_sans_bold"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/gridView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_margin="@dimen/layout_h4"
                    android:gravity="center"
                    android:nestedScrollingEnabled="false"
                    android:numColumns="3"
                    android:scrollbars="none"/>

                <TextView
                    android:id="@+id/fb_challenge_trophy_workout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Workout"
                    android:visibility="gone"
                    android:layout_margin="@dimen/layout_h4"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_body"
                    android:fontFamily="@font/fira_sans_bold"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/gridView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/layout_h4"
                    android:gravity="center"
                    android:nestedScrollingEnabled="false"
                    android:visibility="gone"
                    android:numColumns="3"
                    android:scrollbars="none"/>

                <TextView
                    android:id="@+id/fb_challenge_trophy_call"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ringe"
                    android:visibility="gone"
                    android:layout_margin="@dimen/layout_h4"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_body"
                    android:fontFamily="@font/fira_sans_bold"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/gridView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/layout_h4"
                    android:gravity="center"
                    android:nestedScrollingEnabled="false"
                    android:numColumns="3"
                    android:visibility="gone"
                    android:scrollbars="none"/>

                <com.gigamole.infinitecycleviewpager.HorizontalInfiniteCycleViewPager
                    android:id="@+id/fb_challenge_chlng_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    app:icvp_center_page_scale_offset="30dp"
                    app:icvp_max_page_scale="0.8"
                    app:icvp_medium_scaled="true"
                    app:icvp_min_page_scale="0.5"
                    android:nestedScrollingEnabled="false"
                    app:icvp_min_page_scale_offset="5dp"
                    app:icvp_scroll_duration="500"/>


            </LinearLayout>

        </LinearLayout>

<!--    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="24sp"
            android:fontFamily="@font/fira_sans_bold"
            android:textColor="@color/colorWhite"
            android:text="Challenge Comming Soon!!!"/></LinearLayout>-->
 </androidx.core.widget.NestedScrollView>
        </LinearLayout>