<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_dashboard_bg">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/fb_workout_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Technik"
            android:textSize="20dp"
            android:drawableRight="@drawable/ic_slow_motion"
            android:textAlignment="center"
            android:layout_gravity="start"
            android:gravity="start"
            android:layout_margin="@dimen/layout_h3"
            android:fontFamily="@font/fira_sans_bold"
            android:textColor="@color/colorWhite"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            tools:showIn="@layout/activity_workout_technique"
            android:layout_marginTop="@dimen/layout_h3">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:adjustViewBounds="true"
          android:scaleType="fitXY"
                android:visibility="gone"
                android:src="@drawable/ic_technique_img"/>
            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
android:layout_centerVertical="true"
                android:visibility="gone" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="480dp"


                android:gravity="center">
            <VideoView
                android:id="@+id/simpleVideoView"
                android:layout_width="match_parent"
                android:layout_height="480dp"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="200dp"
                android:gravity="center">
                <ImageView
                    android:id="@+id/img_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:adjustViewBounds="true"
          android:scaleType="fitXY"
                    android:layout_gravity="center"

                    android:src="@drawable/ic_play" />



            </LinearLayout>



        </RelativeLayout>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fb_technique_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Fußball Tanz"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/layout_h4"
                    android:layout_marginRight="@dimen/layout_h4"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/fira_sans_medium"
                    android:textSize="15sp"
                    android:layout_margin="@dimen/layout_h4"/>

                <TextView
                    android:id="@+id/fb_technique_speed"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:text="10x"
                    android:layout_weight="1.5"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_speed_bg"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorMajor"
                    android:fontFamily="@font/fira_sans_medium"
                    android:textSize="12sp"
                    android:layout_margin="@dimen/layout_h4"/>
                <TextView
                    android:id="@+id/fb_technique_time"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="18:02"
                    android:background="#454D62"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textColor="@color/colorMajor"
                    android:fontFamily="@font/fira_sans_medium"
                    android:textSize="@dimen/text_title"
                    android:layout_margin="@dimen/layout_h4"/>

                <Chronometer
                        android:id="@+id/chronometer"
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_weight="1"

                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="#454D62"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorMajor"
                        android:fontFamily="@font/fira_sans_medium"
                        android:textSize="17sp"
                        android:layout_height="50dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fb_technique_pause"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:padding="@dimen/layout_h3"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/layout_h4"
                    android:src="@drawable/ic_pause_button"
                    android:background="#454D62"/>

                <ImageView
                    android:id="@+id/fb_technique_backward"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:padding="@dimen/layout_h3"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/layout_h4"

                    android:src="@drawable/ic_bacward"
                    android:background="#454D62"/>

                <Button
                    android:id="@+id/btn_fb_techinque_next"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Nächste Übung"
                    android:gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:layout_gravity="end|center"
                    android:layout_marginTop="@dimen/layout_h4"
                    android:layout_marginBottom="@dimen/layout_h4"
                    android:textSize="12sp"
                    android:fontFamily="@font/fira_sans_bold"
                    android:background="@color/colorMajor"
                    android:textColor="@color/colorBlack"
                    android:textAllCaps="false"/>


            </LinearLayout>

        </LinearLayout>
        </LinearLayout>

</LinearLayout>