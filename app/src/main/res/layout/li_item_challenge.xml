<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/challenge_card"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:backgroundTint="@color/colorTransparent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"

        app:cardCornerRadius="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_item"
               android:adjustViewBounds="true"
          android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:src="@drawable/ic_challenge_view"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:alpha="0.9"

            android:layout_marginTop="-150dp"
            android:orientation="vertical"
            android:layout_gravity="center|bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="@dimen/layout_h4"
                android:orientation="vertical">
             <!--   <TextView
                    android:id="@+id/txt_success"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:text="Triff die Latte "
                    android:layout_marginLeft="@dimen/layout_h4"
                    android:layout_marginRight="@dimen/layout_h4"
                    android:fontFamily="@font/fira_sans_bold"
                    android:textSize="14sp"/>-->
                <TextView
                    android:id="@+id/txt_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:text="Triff die Latte "
                    android:layout_marginLeft="@dimen/layout_h4"
                    android:gravity="bottom"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="@dimen/layout_h4"
                    android:fontFamily="@font/fira_sans_bold"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/txt_item_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="@dimen/layout_h4"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:layout_marginLeft="@dimen/layout_h4"
                    android:text="Wer trifft die Latte? Egal ob bei den Profis oder den Amateuren. "
                    android:fontFamily="@font/fira_sans"
                    android:textSize="12sp"/>


            </LinearLayout>






        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:alpha="0.9"

            android:layout_marginTop="-250dp"
            android:orientation="vertical"
            android:layout_gravity="center|bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="@dimen/layout_h4"
                android:orientation="vertical">
                   <TextView
                       android:id="@+id/txt_success"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textColor="@color/colorWhite"
                       android:text="FINISHED "
                       android:gravity="center"
                       android:textStyle="bold"
                       android:visibility="gone"
                       android:drawableTop="@drawable/ic_tick"
                       android:layout_marginLeft="@dimen/layout_h4"
                       android:layout_marginRight="@dimen/layout_h4"
                       android:fontFamily="@font/fira_sans_bold"
                       android:textSize="20sp"/>


            </LinearLayout>






        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_challenge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center|bottom">

            <Button
                android:id="@+id/btn_challenge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mehr anzeigen"
                android:textSize="@dimen/text_subbody"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/fira_sans_bold"
                android:textAllCaps="false"
                android:background="@drawable/ic_challenge_button"/>



        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:visibility="gone"
        android:backgroundTint="@color/colorTransparent"

        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"

       >


    </androidx.cardview.widget.CardView>






</LinearLayout>