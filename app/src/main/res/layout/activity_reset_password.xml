<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_password_verify_bg">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="140dp">

            <ImageView
                android:id="@+id/fb_forget_password_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_reset_password"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Whoo Whoo!"
                android:textSize="@dimen/text_body"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorMajor"
                android:fontFamily="@font/fira_sans_bold"
                />

            <TextView
                android:id="@+id/fb_forget_password_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_caption"
                android:text="Dein Passwort wurde erfolgreich zurÃ¼ckgesetzt!
Melde dich jetzt mit deinen neuen Passwort an."
                android:layout_marginLeft="@dimen/layout_h3"
                android:layout_marginRight="@dimen/layout_h3"
                android:layout_marginTop="16dp"
                android:textColor="#454D62"
                android:textAlignment="center"
                app:fontFamily="@font/fira_sans_bold" />
        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_margin="@dimen/layout_h3"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_fb_reset_password_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Login"
            android:textSize="@dimen/text_subbody"
            android:fontFamily="@font/fira_sans_bold"
            android:background="@drawable/ic_button_bg"
            android:textColor="@color/colorBlack"
            android:textAllCaps="false"/>
    </LinearLayout>
</LinearLayout>