<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_dashboard_bg">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_h3"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/fb_challenge_upload_back"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back_arrow" />


            <TextView
                android:visibility="gone"
                android:id="@+id/fb_workout_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Challenge"
                android:layout_marginLeft="@dimen/layout_h4"
                android:textSize="@dimen/text_body"
                android:layout_gravity="center"
                android:fontFamily="@font/fira_sans_bold"
                android:textColor="@color/colorWhite"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/layout_h3"
                    android:src="@drawable/ic_profile_settings"/>
                <ImageView
                    android:id="@+id/fb_challenege_upload_flash"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_flash"/>
            </LinearLayout>




        </LinearLayout>
        <ImageView
            android:id="@+id/fb_challenge_upload_camera_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="100dp"
            android:layout_weight="5"
            android:layout_gravity="center"
            android:layout_above="@+id/button1"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_upload_image"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_h3"
            android:padding="@dimen/layout_h4"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:gravity="center"
                android:orientation="horizontal">




                <ImageView
                    android:id="@+id/fb_challenege_upload_restore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_above="@+id/button1"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_restore"/>
                <ImageView
                    android:id="@+id/btn_fb_challenge_upload_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/button1"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_camera"/>
                <ImageView
                    android:id="@+id/btn_fb_challenge_upload_gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/button1"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_gallery_view"/>
            </LinearLayout>





        </LinearLayout>
    </LinearLayout>

</LinearLayout>



</LinearLayout>