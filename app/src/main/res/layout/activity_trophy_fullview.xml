<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_dashboard_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_h3"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/fb_trophy_back"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back_arrow" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pokale"
                android:layout_marginLeft="@dimen/layout_h4"
                android:textSize="@dimen/text_body"
                android:layout_gravity="center"
                android:fontFamily="@font/fira_sans_bold"
                android:textColor="@color/colorWhite"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/layout_h3"
                    android:src="@drawable/ic_profile_settings"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_profile_tool"/>
            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="@dimen/layout_h3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="50dp">

                <ImageView
                    android:id="@+id/trophy_icon"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_profile_cup"/>
                <TextView
                    android:id="@+id/trophy_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Regionalliga"
                    android:textSize="@dimen/text_body"
                    android:layout_margin="16dp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/fira_sans_bold"
                    android:textAlignment="center"
                 />
                <TextView
                    android:id="@+id/trophy_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Du hast diesen Pokal erhalten, nachdem du eine monatliche Herausforderung gewonnen hast."
                    android:textSize="@dimen/text_body"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:textColor="#454D62"
                    android:fontFamily="@font/fira_sans"
                    android:textAlignment="center"
                    android:layout_margin="@dimen/layout_h4"/>



            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>