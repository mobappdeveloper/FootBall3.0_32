<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/fb_workout_video_view_back"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_margin="@dimen/layout_h3"

            android:src="@drawable/ic_back_arrow" />


        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center"

            android:fontFamily="@font/fira_sans_bold"
            android:gravity="center"
            android:text="19. - 25. Mai 2019"
            android:textColor="@color/colorWhite"
            android:textSize="17sp" />

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fira_sans_bold"
            android:text="Äußerer Ring"
            android:textColor="@color/colorMajor"
            android:textSize="12sp" />
        <ProgressBar
            android:id="@+id/progressgreen"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorMajor_light"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:progress="70"
            android:progressTint="@color/colorMajor"
            android:progressTintMode="src_in"
            android:secondaryProgress="100" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/layout_h3"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="end">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/progressgreen_primary"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:indeterminate="false"
                        app:cpb_background_progressbar_color="@color/colorMajor_light"
                        app:cpb_background_progressbar_width="7dp"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progressbar_color="@color/colorMajor"
                        app:cpb_round_border="true"
                        app:cpb_progressbar_width="7dp"/>
                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/progressgreen_light"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:indeterminate="true"
app:cpb_progress="100"
                        app:cpb_background_progressbar_color="@color/colorMajor_light"
                        app:cpb_background_progressbar_width="3dp"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progressbar_color="@color/colorMajor"
                        app:cpb_round_border="true"
                        app:cpb_progressbar_width="3dp" />
                    <TextView
                        android:id="@+id/txt_techique"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="12/15"
                        android:textSize="10sp"
                        android:textColor="@color/colorMajor"/>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/layout_h3"
                android:layout_weight="1"
                android:gravity="end">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/progressyellow_primary"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:indeterminate="false"
                        app:cpb_background_progressbar_color="@color/colorYellow_light"
                        app:cpb_background_progressbar_width="7dp"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progressbar_color="@color/colorYellow"
                        app:cpb_round_border="true"
                        app:cpb_progressbar_width="7dp"/>
                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/progressyellow_light"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:indeterminate="true"
                        app:cpb_progress="100"
                        app:cpb_background_progressbar_color="@color/colorYellow_light"
                        app:cpb_background_progressbar_width="3dp"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progressbar_color="@color/colorYellow"
                        app:cpb_round_border="true"
                        app:cpb_progressbar_width="3dp" />
                    <TextView
                        android:id="@+id/txt_fitness"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="12/15"
                        android:textSize="10sp"
                        android:textColor="@color/colorYellow"/>

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/layout_h3"
                android:layout_weight="1"
                android:gravity="end">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/progressred_primary"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:indeterminate="false"
                        app:cpb_background_progressbar_color="@color/colorRedC_light"
                        app:cpb_background_progressbar_width="7dp"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progressbar_color="@color/colorRedC"
                        app:cpb_round_border="true"
                        app:cpb_progressbar_width="7dp"/>
                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/progressred_light"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:indeterminate="true"
                        app:cpb_progress="100"
                        app:cpb_background_progressbar_color="@color/colorRedC_light"
                        app:cpb_background_progressbar_width="3dp"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progressbar_color="@color/colorRedC"
                        app:cpb_round_border="true"
                        app:cpb_progressbar_width="3dp" />
                    <TextView
                        android:id="@+id/txt_body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="12/15"
                        android:textSize="10sp"
                        android:textColor="@color/colorRedC"/>

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fira_sans_bold"
                android:text="Technique"
                android:layout_weight="1"

                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fira_sans_bold"
                android:text="Fitness"
               android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fira_sans_bold"
                android:text="Body"
             android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fira_sans_bold"
            android:text="Innerer Ring"
            android:textColor="@color/colorMajorblue"
            android:textSize="12sp" />
        <ProgressBar
            android:id="@+id/progressblue"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorMajorblue_light"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:progress="70"
            android:progressTint="@color/colorMajorblue"
            android:progressTintMode="src_in"
            android:secondaryProgress="100" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/layout_h3"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="end">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/progressblue_primary"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:indeterminate="false"
                        app:cpb_background_progressbar_color="@color/colorMajorblue_light"
                        app:cpb_background_progressbar_width="7dp"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progressbar_color="@color/colorMajorblue"
                        app:cpb_round_border="true"
                        app:cpb_progressbar_width="7dp"/>
                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/progressblue_light"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:indeterminate="true"
                        app:cpb_progress="100"
                        app:cpb_background_progressbar_color="@color/colorMajorblue_light"
                        app:cpb_background_progressbar_width="3dp"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progressbar_color="@color/colorMajorblue"
                        app:cpb_round_border="true"
                        app:cpb_progressbar_width="3dp" />
                    <TextView
                        android:id="@+id/txt_mental"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="12/15"
                        android:textSize="10sp"
                        android:textColor="@color/colorMajorblue"/>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/layout_h3"
                android:layout_weight="1"
                android:gravity="end">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/progressorange_primary"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:indeterminate="false"
                        app:cpb_background_progressbar_color="@color/colorOrgange_light"
                        app:cpb_background_progressbar_width="7dp"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progressbar_color="@color/colorOrgange"
                        app:cpb_round_border="true"
                        app:cpb_progressbar_width="7dp"/>
                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/progressorgane_light"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:indeterminate="true"
                        app:cpb_progress="100"
                        app:cpb_background_progressbar_color="@color/colorOrgange_light"
                        app:cpb_background_progressbar_width="3dp"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progressbar_color="@color/colorOrgange"
                        app:cpb_round_border="true"
                        app:cpb_progressbar_width="3dp" />
                    <TextView
                        android:id="@+id/txt_health"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="12/15"
                        android:textSize="10sp"
                        android:textColor="@color/colorOrgange"/>

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/layout_h3"
                android:layout_weight="1"
                android:gravity="end">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/progresslander_primary"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:indeterminate="false"
                        app:cpb_background_progressbar_color="@color/colorlander_light"
                        app:cpb_background_progressbar_width="7dp"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progressbar_color="@color/colorlander"
                        app:cpb_round_border="true"
                        app:cpb_progressbar_width="7dp"/>
                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/progresslander_light"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:indeterminate="true"
                        app:cpb_progress="100"
                        app:cpb_background_progressbar_color="@color/colorlander_light"
                        app:cpb_background_progressbar_width="3dp"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progressbar_color="@color/colorlander"
                        app:cpb_round_border="true"
                        app:cpb_progressbar_width="3dp" />
                    <TextView
                        android:id="@+id/txt_behaiour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="1112/1115"
                        android:textSize="10sp"
                        android:textColor="@color/colorlander"/>

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fira_sans_bold"
                android:text="Mental"
                android:layout_weight="1"

                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fira_sans_bold"
                android:text="Health"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fira_sans_bold"
                android:text="Behaviour"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_prev_month"
                android:layout_width="50dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:layout_gravity="start"
                android:src="@drawable/ic_arrow_back_black_24dp"
               />
            <TextView
                android:id="@+id/txt_current_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="february"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="12sp"
                android:fontFamily="@font/fira_sans_semibold"
                android:textColor="@color/colorWhite"
                />
            <ImageView
                android:id="@+id/img_next_month"
                android:layout_width="50dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:src="@drawable/ic_arrow_forward_black_24dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="MO"
                android:layout_weight="1"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/fira_sans_semibold"
                android:textColor="@color/colorWhite"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="DI"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12sp"
                android:fontFamily="@font/fira_sans_semibold"
                android:textColor="@color/colorWhite"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="MI"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12sp"
                android:fontFamily="@font/fira_sans_semibold"
                android:textColor="@color/colorWhite"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="DO"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12sp"
                android:fontFamily="@font/fira_sans_semibold"
                android:textColor="@color/colorWhite"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="FR"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="12sp"
                android:fontFamily="@font/fira_sans_semibold"
                android:textColor="@color/colorWhite"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="SA"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="12sp"
                android:fontFamily="@font/fira_sans_semibold"
                android:textColor="@color/colorWhite"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="SO"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12sp"
                android:fontFamily="@font/fira_sans_semibold"
                android:textColor="@color/colorWhite"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="start"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="vertical">
        </LinearLayout>
        <jp.co.recruit_mp.android.lightcalendarview.LightCalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lcv_weekDayTextSize="16sp"
            app:lcv_dayTextSize="12sp"
            app:lcv_textColor="@color/colorGray"
            android:visibility="gone"
            app:lcv_selectionColor="@color/colorMajor"
            app:lcv_accentColor="@color/colorMajor"
            app:lcv_firstDayOfWeek="@integer/lcv_monday"
            />
    </LinearLayout>
</LinearLayout>
    </ScrollView>
</LinearLayout>