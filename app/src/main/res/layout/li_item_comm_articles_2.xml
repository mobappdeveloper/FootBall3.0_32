<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="15dp"
        android:backgroundTint="@color/colorTransparent"
        android:layout_margin="@dimen/layout_h4">



        <ImageView
            android:id="@+id/community_read_articles_2_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
           android:adjustViewBounds="true"
          android:scaleType="fitXY"
            android:src="@drawable/ic_comm_article"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/layout_h4"
                >
                <ImageView
                    android:id="@+id/community_read_articles_quote_2_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_trend_quote"/>

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>