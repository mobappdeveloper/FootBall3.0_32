<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/payment_background"

    android:scrollbars="none"
    tools:context=".Activities.FBPaymentActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_dashboard_bg"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:paddingRight="16dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_weight="1"
                android:src="@mipmap/ic_football" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"

                    android:src="@drawable/ic_payment_close" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
android:paddingBottom="16dp"
            android:paddingRight="24dp"
            android:gravity="start"
            android:orientation="vertical"
            android:paddingLeft="24dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:src="@drawable/ic_football_cup" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="start"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/txt_offer_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fira_sans_semibold"
                android:text="Werde ein Premium-Mitglied"
                android:textColor="@color/text_highlight"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:fontFamily="@font/fira_sans_medium"
                android:paddingTop="8dp"
                android:text="Unbegrenzter Zugang du allen Workouts und maßgeschneiderte Workoutpläne. "
                android:textColor="@color/colorWhite"
                android:textSize="12dp"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="start"
            android:paddingRight="24dp"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingTop="16dp">


            <ImageView
                android:id="@+id/img_payment_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:elevation="15dp"
                android:paddingBottom="60dp"
                android:src="@drawable/ic_offer_highlight" />

            <TextView
                android:id="@+id/txt_offer_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/img_payment_ic"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:text="Spare 67%"
                android:textColor="@color/text_highlight" />

            <androidx.cardview.widget.CardView
                android:id="@+id/layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentBottom="true"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_text_hightlight"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingTop="24dp"
                    android:paddingRight="16dp"

                    android:paddingBottom="24dp">

                    <TextView
                        android:id="@+id/txt_year_plan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/fira_sans_bold"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:text="Jährlich - 39,99 € / Jahr"
                        android:textColor="@color/colorBlack" />

                    <TextView
                        android:id="@+id/txt_year_monthly"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:alpha="0.8"
                        android:fontFamily="@font/fira_sans_medium"
                        android:gravity="center"
                        android:textSize="11dp"
                        android:paddingTop="4dp"
                        android:text="3,33 € / Monat, wird jährlich in Rechnung gestellt"
                        android:textColor="@color/colorBlack" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>
        <LinearLayout
            android:id="@+id/layout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_black_background"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingTop="24dp"
            android:paddingRight="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="24dp"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/txt_trial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/fira_sans_bold"
                android:gravity="center"
                android:textSize="15dp"
                android:text="7 Tage kostenlos testen"
                android:textColor="@color/text_highlight" />

            <TextView
                android:id="@+id/txt_after_trial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/fira_sans_bold"
                android:gravity="center"
                android:paddingTop="4dp"
                android:textSize="11dp"
                android:text="9,99 € / Monat, nach 7 - tägiger Probezeit"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_couponcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="24dp"
          >

            <EditText
                android:id="@+id/edt_couponcode"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/editext_border_highlight"
                android:fontFamily="@font/fira_sans_bold"
                android:gravity="center"
                android:textSize="14dp"
                android:padding="4dp"
                android:layout_weight="1"
                android:hint="Gib deinen Promo-Code ein"
                android:textColorHint="@color/colorMajor"
                android:textColor="@color/text_highlight" />

            <ImageButton
                android:id="@+id/imgbtn_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="16dp"
                android:background="@color/transparent"
                android:src="@drawable/ic_payment_play"
             />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="24dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="24dp"
            android:paddingBottom="16dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/fira_sans_bold"
                android:gravity="center"
                android:textSize="13dp"
                android:text="Geschäftsbedingungen"
                android:textColor="@color/text_highlight" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/fira_sans_medium"
                android:gravity="center"
                android:paddingTop="8dp"
                android:alpha="0.5"
                android:textSize="11dp"
                android:text="Dein iTunes-Konto wird mit dem Gesamtbetrag für den Abonnementzeitraum belastet.  Sofern du die automatische Verlängerung nicht mindestens 24 Stunden vor Ablauf des Abonnementzeitraums beendest, verlängert sich das Abonnement automatisch zum selben Preis und dein iTunes-Konto wird dementsprechend belastet. Du kannst das Abonnement jederzeit verwalten und die automatische Verlängerung in den Kontoeinstellungen für deine Apple ID deaktivieren. Nicht genutzte Zeiträume einer kostenlosen Testphase verfallen bei der Anmeldung eines Abonnements ohne Testphase."
                android:textColor="@color/colorWhite" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>